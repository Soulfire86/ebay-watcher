@model EbayWatcher.Models.WishlistItem[]

@{
    ViewBag.Title = "Index";
}

<h2>Wishlist</h2>

@Html.ActionLink("New Item", "Edit", "Wishlist", null, new { @class = "btn btn-primary" })

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Status</th>
            <th>Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Edit", new { Id = item.Id })</td>
                <td>@item.CategoryFullName</td>
                <td>@item.Status</td>
                <td>@item.Notes</td>
                <td>
                    @Html.ActionLink("View Ended", "_FindEnded", new { id = item.Id }, new { target = "_blank", @class = "find-ebay-items" })
                    @Html.ActionLink("View Current", "_FindCurrent", new { id = item.Id }, new { target = "_blank", @class = "find-ebay-items" })
                </td>
            </tr>
        }
    </tbody>
</table>